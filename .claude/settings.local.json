{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Task",
      "WebSearch",
      "WebFetch",
      "Skill",
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(gh *)",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(bash *)",
      "Bash(sh *)",
      "Bash(ls *)",
      "Bash(ls)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(sort *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(echo *)",
      "Bash(tree *)",
      "Bash(du *)",
      "Bash(pwd)",
      "Bash(which *)",
      "Bash(where *)",
      "Bash(chmod *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(touch *)",
      "Bash(cd *)",
      "Bash(test *)",
      "Bash(comm *)",
      "Bash(diff *)",
      "Bash(xargs *)",
      "Bash(sed *)",
      "Bash(awk *)",
      "Bash(curl *)",
      "Bash(supabase *)",
      "Bash(docker *)",
      "Bash(docker-compose *)",
      "Bash(dir *)",
      "Bash(timeout *)",
      "Bash(netstat *)",
      "Bash(pdftotext *)",
      "Bash(for *)",
      "Bash(if *)",
      "Bash(while *)",
      "Bash(export *)",
      "Bash(./.claude/scripts/*)",
      "mcp__filesystem__*",
      "mcp__slack__*",
      "mcp__memory__*",
      "mcp__github__*",
      "mcp__context7__*",
      "mcp__plugin_context7_context7__*",
      "mcp__render__*",
      "mcp__cloudflare*",
      "mcp__magic-ui__*",
      "Skill(*)",
      "Bash(git:*)",
      "Bash(do echo:*)",
      "Bash(python3:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(git push --force * main)",
      "Bash(git push --force * master)",
      "Bash(git push --force origin main)",
      "Bash(git push --force origin master)",
      "Bash(*DROP DATABASE*)",
      "Bash(*DROP TABLE*)"
    ],
    "defaultMode": "plan"
  },
  "model": "sonnet",
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "filesystem",
    "slack",
    "github",
    "supabase",
    "memory"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "tool == \"Bash\" && tool_input.command matches \"git push.*(main|master)\"",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[Hook] Pushing to main/master branch - ensure tests pass and code is reviewed!' >&2"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "tool in [\"Edit\", \"Write\"] && tool_input.file_path matches \"\\\\.(ts|tsx|js|jsx|json|css|scss|md)$\"",
        "hooks": [
          {
            "type": "command",
            "command": "#!/bin/bash\nnpx prettier --write \"$file_path\" 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "tool in [\"Edit\", \"Write\"] && tool_input.file_path matches \"\\\\.(ts|tsx)$\"",
        "hooks": [
          {
            "type": "command",
            "command": "#!/bin/bash\nnpx eslint --fix \"$file_path\" 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "thinkingEnabled": false,
  "autoAcceptEdits": false,
  "disabledMcpServers": [
    "postgres",
    "sqlite",
    "brave-search",
    "google-maps",
    "sequential-thinking",
    "vercel",
    "railway",
    "firecrawl",
    "cloudflare-docs",
    "cloudflare-workers-builds",
    "cloudflare-workers-bindings",
    "cloudflare-observability",
    "clickhouse",
    "context7",
    "magic"
  ]
}
