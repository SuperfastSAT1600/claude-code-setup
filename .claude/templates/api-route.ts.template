// =============================================================================
// GET - List {{RESOURCE_NAME_PLURAL}}
// =============================================================================

export async function GET(request: NextRequest) {
  try {
    // Authentication
    const session = await getServerSession(authOptions);
    if (!session?.user) {
      return NextResponse.json(
        { error: { code: 'UNAUTHORIZED', message: 'Authentication required' } },
        { status: 401 }
      );
    }

    // Parse query parameters
    const searchParams = Object.fromEntries(request.nextUrl.searchParams);
    const query = QuerySchema.parse(searchParams);

    // Calculate pagination
    const skip = (query.page - 1) * query.perPage;

    // Build where clause
    const where = {
      // Add ownership filter if needed
      // userId: session.user.id,
      ...(query.search && {
        name: { contains: query.search, mode: 'insensitive' as const },
      }),
    };

    // Fetch data with pagination
    const [items, total] = await Promise.all([
      db.{{ROUTE_PATH}}.findMany({
        where,
        skip,
        take: query.perPage,
        orderBy: { [query.sortBy]: query.sortOrder },
      }),
      db.{{ROUTE_PATH}}.count({ where }),
    ]);

    return NextResponse.json({
      data: items,
      meta: {
        pagination: {
          page: query.page,
          perPage: query.perPage,
          total,
          totalPages: Math.ceil(total / query.perPage),
        },
      },
    });
  } catch (error) {
    console.error('[{{ROUTE_NAME}}] GET error:', error);

    if (error instanceof z.ZodError) {
      return NextResponse.json(
        { error: { code: 'VALIDATION_ERROR', message: 'Invalid query parameters', details: error.errors } },
        { status: 400 }
      );
    }

    return NextResponse.json(
      { error: { code: 'INTERNAL_ERROR', message: 'Failed to fetch {{RESOURCE_NAME_PLURAL}}' } },
      { status: 500 }
    );
  }
}

