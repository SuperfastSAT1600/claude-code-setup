# =============================================================================
# Environment Variables Template
# =============================================================================
# Copy this file to .env in your project root and fill in your values:
#   cp .claude/templates/.env.example .env
#
# Or run the setup script which will do this automatically:
#   node setup.cjs
#
# IMPORTANT: Never commit .env to version control!
#
# NOTE: This file contains APPLICATION runtime variables.
# For Claude Code MCP server configuration, see .mcp.json
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration (Application Runtime)
# -----------------------------------------------------------------------------
# These are used by YOUR APPLICATION to connect to Supabase at runtime
# Get these from: https://supabase.com/dashboard/project/_/settings/api

# Project URL (used by your app to connect to Supabase)
SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Anon/Public Key (safe to expose to client)
SUPABASE_ANON_KEY=your_anon_key_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Service Role Key (SECRET - server-side only, never expose to client!)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL (if using direct connection instead of Supabase SDK)
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# SQLite (path relative to project root)
SQLITE_DATABASE_PATH=./data/database.db

# Redis (for caching, sessions)
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Environment
NODE_ENV=development

# Server
PORT=3000
HOST=localhost

# Public URL (for OAuth callbacks, webhooks, etc.)
PUBLIC_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# External Services (Your Application Uses)
# -----------------------------------------------------------------------------
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# SendGrid (Email Service)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Twilio (SMS Service)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name_here

# Google Cloud (Optional)
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT=your-project-id

# -----------------------------------------------------------------------------
# OAuth Providers (Application Level)
# -----------------------------------------------------------------------------
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_oauth_client_id_here
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret_here

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable features in your application
FEATURE_ANALYTICS=true
FEATURE_BETA_ACCESS=false
FEATURE_MAINTENANCE_MODE=false

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# API Rate Limits
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Email Templates
# -----------------------------------------------------------------------------
# Paths to email template directories (if using custom templates)
EMAIL_TEMPLATES_DIR=./templates/emails

# -----------------------------------------------------------------------------
# File Upload
# -----------------------------------------------------------------------------
# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
