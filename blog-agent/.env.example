# Blog Agent Configuration

# Anthropic API Key (for Claude)
ANTHROPIC_API_KEY=your_api_key_here

# Model Configuration
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=4000

# Web Search Configuration
# Choose: 'google', 'serpapi', or 'mock' (for testing without API)
SEARCH_ENGINE=google

# Google Custom Search API (권장)
# 설정 가이드: blog-agent/GOOGLE_SEARCH_SETUP.md
SEARCH_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# 또는 SerpAPI (대안)
# SEARCH_ENGINE=serpapi
# SEARCH_API_KEY=your_serpapi_key_here

# Data Directories
MY_POSTS_DIR=./data/my-posts
SAT_MATERIALS_DIR=./data/sat-materials
OUTPUTS_DIR=./data/outputs

# Feature Flags
ENABLE_WEB_SEARCH=true
ENABLE_SAT_REFERENCES=true
ENABLE_MY_POSTS_ANALYSIS=true
ENABLE_SUPABASE_STORAGE=true
PREFER_SUPABASE_POSTS=true
ENABLE_PATTERN_LEARNING=true

# Korean Sentence Ending Preference
# Set to 'true' to enforce formal endings (~다, ~습니다, ~입니다) over conversational (~요, ~어요, ~이에요)
# This overrides the automatic pattern detection from existing posts
PREFER_FORMAL_KOREAN=true

# Target formal ending ratio (0.0-1.0)
# 0.85 = 85% formal, 15% conversational (recommended)
# 1.0 = 100% formal (pure formal style)
# 0.5 = 50/50 mix
TARGET_FORMAL_RATIO=0.85

# Supabase Configuration (for post storage and pattern learning)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL_HOURS=24
