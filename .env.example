# =============================================================================
# Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# Or run the setup script which will do this automatically:
#   node setup.js
#
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# MCP Server API Keys
# -----------------------------------------------------------------------------
# These are used by MCP servers configured in .mcp.json
# Only fill in the ones you need

# GitHub - for repository operations
# Get token at: https://github.com/settings/tokens
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# Brave Search - for web search
# Get key at: https://api.search.brave.com/
BRAVE_API_KEY=your_brave_api_key_here

# Google Maps - for location services
# Get key at: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Slack - for workspace integration
# Get tokens at: https://api.slack.com/apps
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_TEAM_ID=your_slack_team_id_here

# Vercel - for deployment management
# Get token at: https://vercel.com/account/tokens
VERCEL_API_TOKEN=your_vercel_token_here

# Railway - for deployment management
# Get token at: https://railway.app/account/tokens
RAILWAY_API_TOKEN=your_railway_token_here

# Firecrawl - for web scraping
# Get key at: https://firecrawl.dev/
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Cloudflare - for Workers, CDN, etc.
# Get token at: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your_cloudflare_token_here

# ClickHouse - for analytics database
CLICKHOUSE_URL=your_clickhouse_url_here
CLICKHOUSE_PASSWORD=your_clickhouse_password_here

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# SQLite (path relative to project root)
SQLITE_DATABASE_PATH=./data/database.db

# Redis (for caching, sessions)
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Environment
NODE_ENV=development

# Server
PORT=3000
HOST=localhost

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here

# -----------------------------------------------------------------------------
# External Services (Common)
# -----------------------------------------------------------------------------
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# SendGrid (email)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name_here

# -----------------------------------------------------------------------------
# Logging & Monitoring
# -----------------------------------------------------------------------------
# Sentry
SENTRY_DSN=your_sentry_dsn_here

# Log Level (debug, info, warn, error)
LOG_LEVEL=info
